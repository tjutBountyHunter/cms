<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsl.erp.mapper.XslPushMapper">
    <select id="selectAll" resultType="xsl.erp.pojo.XslPush">
     select * from xsl_push
    </select>
    <update id="alterPush">
    update xsl_push
    set
        <if test="msg_title != null">
            msg_title = #{msg_title}
        </if>
        <if test="msg_content != null">
            msg_content = #{msg_content}
        </if>
        <if test="notification_title != null">
            notification_title = #{notification_title}
        </if>
    where pushId = #{pushId}
    </update>
    <delete id="deletePush">
    delete from  xsl_push
    where pushId= #{pushId}
    </delete>
    <insert id="addPush">
    insert into  xsl_push
    (pushId,msg_title,msg_content,notification_title)
    values
    (#{pushId},#{msg_title},#{msg_content},#{notification_content});

    </insert>
</mapper>